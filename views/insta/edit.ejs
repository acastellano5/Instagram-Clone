<% layout('layouts/boilerplate') -%>

<% if (error.length) { %> 
    <div class="row alert-msg">
        <div class="col-12">
            <div class="alert alert-danger alert-dismissible fade show mb-5" role="alert">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    </div>
<% } %> 

<div class="row justify-content-center">
    <div class="col-11 col-sm-10 col-md-9 col-lg-8 col-xl-7 col-xxl-6">
        <h1 class="text-center">Edit post</h1>
        <form action="/posts/<%= post._id %>?_method=PUT" method="POST" autocomplete="off" class="needs-validation" novalidate autocomplete="off">
            <div class="mb-3">
                <label for="caption" class="form-label">Caption</label>
                <textarea name="caption" id="caption" class="form-control" required><%= post.caption %></textarea>
            </div>
        
            <button class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

<script src="/js/validate.js"></script>