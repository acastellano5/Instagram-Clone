<% layout('layouts/boilerplate') -%>

<% if (error.length) { %> 
    <div class="row alert-msg">
        <div class="col-12">
            <div class="alert alert-danger alert-dismissible fade show mb-5" role="alert">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    </div>
<% } %> 

<div class="row justify-content-center">
    <div class="col-11 col-sm-10 col-md-9 col-lg-8 col-xl-7 col-xxl-6">
        <h1 class="text-center">Create new post</h1>
        <form action="/posts" method="POST" autocomplete="off" class="needs-validation" novalidate enctype="multipart/form-data">
            <div class="mb-3">
                <label for="image" class="form-label">Image(s)</label>
                <input type="file" id="image" name="image" class="form-control" required multiple>
            </div>
        
            <div class="mb-3">
                <label for="caption" class="form-label">Caption</label>
                <textarea name="caption" id="caption" class="form-control" required></textarea>
            </div>
        
            <button class="btn btn-primary">Post</button>
        </form>
    </div>
</div>

<script src="/js/validate.js"></script>